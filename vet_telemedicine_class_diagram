// Class Diagram for Veterinary Telemedicine Backend
digraph {
	User [label="{
    User|
    + idUser: int PK |
    + firstName: varchar |
    + lastName: varchar |
    + email: varchar |
    + phone: varchar |
    + password: varchar |
    + createdAt: datetime |
    + updatedAt: datetime
}" fillcolor=lightblue shape=record style=filled]
	Pet [label="{
    Pet|
    + idPet: int PK |
    + idUser: int FK |
    + name: varchar |
    + species: varchar |
    + breed: varchar |
    + age: int |
    + weight: float |
    + createdAt: datetime |
    + updatedAt: datetime
}" fillcolor=lightblue shape=record style=filled]
	Appointment [label="{
    Appointment|
    + idAppointment: int PK |
    + idUser: int FK |
    + idVetProfile: int FK |
    + appointmentDate: datetime |
    + status: varchar |
    + notes: text |
    + createdAt: datetime |
    + updatedAt: datetime
}" fillcolor=lightblue shape=record style=filled]
	VetProfile [label="{
    VetProfile|
    + idVetProfile: int PK |
    + firstName: varchar |
    + lastName: varchar |
    + specialization: varchar |
    + phone: varchar |
    + email: varchar |
    + createdAt: datetime |
    + updatedAt: datetime
}" fillcolor=lightblue shape=record style=filled]
	User -> Pet [label="1 to many"]
	User -> Appointment [label="1 to many"]
	VetProfile -> Appointment [label="1 to many"]
}
